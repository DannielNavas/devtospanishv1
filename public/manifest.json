{
  "manifest_version": 3,
  "__firefox__manifest_version": 2,
  "version": "1.0.0",
  "name": "DevToSpanish",
  "short_name": "DevTo ES",
  "description": "¡Obtén las últimas noticias de desarrollo en español!",
  "homepage_url": "https://devtospanish.danniel.dev",
  "icons": {
    "16": "devtoes.png",
    "48": "devtoes.png",
    "128": "devtoes.png"
  },
  "__prod__permissions": ["scripting"],
  "__prod|chrome|opera|edge__host_permissions": ["https://danniel.dev/", "https://*.danniel.dev/"],
  "__firefox|prod__permissions": ["https://danniel.dev/", "https://*.danniel.dev/"],
  "__dev__permissions": ["storage", "scripting"],
  "__dev__host_permissions": ["http://localhost/", "http://*.local.com/"],
  "__firefox|dev__permissions": ["storage", "http://localhost/", "http://*.local.com/"],
  "optional_permissions": ["topSites"],
  "__firefox__optional_permissions": ["topSites", "*://*/*"],
  "__chrome|opera|edge__optional_host_permissions": ["*://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "__firefox__content_security_policy": "script-src 'self'; object-src 'self';",
  "__chrome|opera|edge__action": {
    "default_icon": {
      "16": "devtoes.png",
      "48": "devtoes.png"
    }
  },
  "__firefox__browser_action": {
    "default_icon": {
      "16": "devtoes.png",
      "48": "devtoes.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "__firefox__chrome_url_overrides": {
    "newtab": "index.html"
  },
  "__firefox__browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0"
    }
  },
  "__chrome__offline_enabled": true
}
